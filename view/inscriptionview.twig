{% extends "pageLayout.twig" %}
{% block body %}

{% block javascripts %}
<script>
    function check_pass() {
        if (document.getElementById('password').value ==
            document.getElementById('confirm_password').value) {
            document.getElementById('submit').disabled = false;
        } else {
            document.getElementById('submit').disabled = true;
        }
    }
</script>
{% endblock %}

	<form
		action='./?controller=inscription&action=default' method='POST' class="flex flex-col space-y-8 mt-10">

		
		<input 
		type="text" 
		placeholder="First name" 
		class="border rounded-lg py-4 px-4 bg-gray-700 border-gray-700 placeholder-gray-500 text-white font-mono text-xl font-bold" 
		name="login"
		/>

		<input 
		id="password"
		type="password" 
		placeholder="password" 
		class="border rounded-lg py-4 px-4 bg-gray-700 border-gray-700 placeholder-gray-500 text-white" 
		required="required" 
		name="password"
		onkeyup="check_pass()" 
		/>

		<input 
		id="confirm_password"
		type="password" 
		placeholder="confirm password" 
		class="border rounded-lg py-4 px-4 bg-gray-700 border-gray-700 placeholder-gray-500 text-white" 
		name="password"
		onkeyup="check_pass()" 
		/>

		<input 
		id="submit"
		type="submit" 
		class="border border-blue-500 bg-blue-500 text-white rounded-lg py-3 font-semibold" 
		value="submit"
		name"submit"
		disabled 
		>
	</form> 


	<a 
	type="submit"
	class=" btn border border-orange-500 bg-orange-500 text-white rounded-lg py-3 font-semibold text-center	mt-2.5" 
	href="./?controller=Home&action=default" 
	value="submit" 
	name"cancel">
		annuler
	</a>

    
</form>{% endblock %}
